<?php $__env->startSection('content'); ?>
<?php echo Breadcrumbs::addCrumb('Home', '/'); ?>

<div class="row category-block">    
<?php foreach($categories as $category): ?>
<?php if(Visibility::check('category', $category->id)): ?>
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title"><span class="glyphicon glyphicon-th"></span> <?php echo $category->name; ?></h3>
	  </div>
	  <div class="panel-body">
		  <?php foreach($category->forums as $forum): ?>
		  <?php if(Visibility::check('forum', $forum->id)): ?>
		  <div class="row forum-block">
			  <div class="col-md-1">
			  	<span class="forum-icon-active glyphicon glyphicon-comment"></span>
			  </div>
			  <div class="col-md-6 forum-info">
				  <h4><a href="/<?php echo $forum->id; ?>/<?php echo $forum->slug(); ?>"><?php echo $forum->name; ?></a></h4>
				  <p><?php echo $forum->description; ?></p>	  
			  </div>
			  <div class="col-md-3 forum-post">
			  	<p class="stats-post-body">
			  	<?php if($forum->latest_post()): ?>
			  	<a class="board-meta" href="<?php echo Thread::find($forum->latest_thread()->id)->permalink(); ?>"><?php echo e(str_limit($forum->latest_thread()->name, 57, '...')); ?></a>
			  	<br>
				By: <b><a class="board-meta" href="/user/<?php echo User::find($forum->latest_thread()->user_id)->username; ?>"><?php echo User::find($forum->latest_thread()->user_id)->username; ?></a></b>
			  	<?php endif; ?>
			  	</p>
			  </div>
			  <div class="col-md-2 forum-counts">
			  	<p><b><?php echo $forum->thread_count(); ?></b> threads<br>
			  	<b><?php echo $forum->reply_count(); ?></b> replies</p>
			  </div>
		  </div>
		  <?php endif; ?>
		  <?php endforeach; ?>
	  </div>
	</div>
<?php endif; ?>
<?php endforeach; ?>
</div>
<?php $__env->stopSection(); ?>
<?php echo $__env->make('master', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>