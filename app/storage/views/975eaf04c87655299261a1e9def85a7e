<?php $__env->startSection('content'); ?>
	<div class="form-style">
<?php if(isset($errors) && sizeof($errors) > 0): ?>
		<div class="alert alert-danger alert-dismissible" role="alert">
		  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
		  <h4>Oops!</h4>
		  <?php foreach($errors as $error): ?>
		  	<?php echo e($error); ?><br>
		  <?php endforeach; ?>
		</div>
<?php endif; ?>
		<?php echo Form::open(array('url' => 'login')); ?>
            <div class="form-group">
            	<label>Username</label>
            	<?php echo Form::text('username', null, array('class'=>'form-control', 'placeholder'=>'')); ?>
            </div>     
            <div class="form-group">
            	<label>Password</label>
            	<?php echo Form::password('password', array('class'=>'form-control', 'placeholder'=>'')); ?>
            </div>
	      <button type="submit" class="btn btn-success pull-right">Login</button>
	    <?php echo Form::close(); ?>
	</div>
<?php $__env->stopSection(); ?>
<?php echo $__env->make('master', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>