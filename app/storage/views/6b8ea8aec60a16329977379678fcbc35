<?php $__env->startSection('content'); ?>
<h1>Ratings of <?php echo $user->username; ?></h1>
<div class="table-responsive">
	  <table class="table">
      <thead>
        <tr>
          <th>Rating</th>
          <th>Giver</th>
          <th>Receiver</th>
          <th>Notes</th>
        </tr>
      </thead>
      <tbody>
      <?php foreach($ratings as $rating): ?>
        <tr>
          <td><?php echo e($rating->rating); ?></td>
          <?php if(User::where('username', '=', $rating->username)->first()): ?>
          <td><?php echo User::where('username', '=', $rating->username)->first()->profile(); ?></td>
          <?php else: ?>
          <td><?php echo e($rating->username); ?></td>
          <?php endif; ?>
          <?php if(User::where('username', '=', $rating->rated_username)->first()): ?>
          <td><?php echo User::where('username', '=', $rating->rated_username)->first()->profile(); ?></td>
          <?php else: ?>
          <td><?php echo e($rating->rated_username); ?></td>
          <?php endif; ?>
          <td><?php echo e($rating->notes); ?></td>
        </tr>
      <?php endforeach; ?>
      </tbody>
    </table>
	</div>
	<?php echo $ratings->links(); ?>
<?php $__env->stopSection(); ?>
