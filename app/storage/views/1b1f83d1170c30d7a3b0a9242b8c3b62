<?php $__env->startSection('content'); ?>
<?php echo Breadcrumbs::addCrumb('Home', '/'); ?>

<?php echo Breadcrumbs::addCrumb($post->thread->forum->name, $post->thread->forum->permalink()); ?>

<?php echo Breadcrumbs::addCrumb($post->thread->name, $post->thread->permalink()); ?>

<?php echo Breadcrumbs::addCrumb('Update Post'); ?>

	<div class="col-lg-12 reply-body">
		<?php if($post->id == $post->thread->head()->id): ?>
		<h1>Editing thread: <?php echo $post->thread->name; ?></h1>
		<?php endif; ?>
		<p class="post-meta"><a href="/user/<?php echo $post->user->id; ?>" target="_blank"><?php echo e($post->user->username); ?></a> posted this on <?php echo $post->created_at; ?></p>
		<?php echo Markdown::string(e($post->body)); ?>

	</div>
	<hr>
	<div class="col-lg-12">
		<form role="form" method="POST" action="/posts/update">
			<input type="hidden" name="post_id" value="<?php echo $post->id; ?>">
			<input type="hidden" name="thread_id" value="<?php echo $post->thread->id; ?>">
		  <div class="form-group">
		    <textarea name="body" class="form-control" rows="5"><?php if(Session::has('preview')): ?><?php echo Input::old('body'); ?><?php else: ?><?php echo $post->body; ?><?php endif; ?></textarea>
		  </div>
		  <button name="submit" type="submit" class="btn btn-success">Save</button>
		  <button name="preview" class="btn btn-success">Preview</button>
		  <a href="<?php echo $post->thread->permalink(); ?>"><button type="button" class="btn btn-danger">Back</button></a>
		</form>
	</div>
	<?php if(Session::has('preview')): ?>
	<div class="row content-preview">
		<div class="col-lg-12 preview-window">
		<?php echo Markdown::string(Session::get('preview')); ?>

		</div>
	<?php else: ?>
	<div class="row content-preview" style="display: none;">
		<div class="col-lg-12 preview-window">
		Hey, whenever you type something in the upper box using markdown and click <strong>preview</strong>, you will see a preview of it over here!
		</div>
	<?php endif; ?>
	</div>
<?php $__env->stopSection(); ?>
<?php echo $__env->make('master', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>